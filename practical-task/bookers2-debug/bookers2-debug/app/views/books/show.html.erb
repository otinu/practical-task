<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= render partial: 'books/show', locals: { book: @book } %>
      <div id="post_comment_index_<%= @book.id %>">
      <div id="post_comment_destroy_<%= @book.id %>">
       <%= render partial: 'post_comments/post_comment_index', locals: { book: @book } %>
      </div>
      </div>
      <div id="post_comment_form_<%= @book.id %>">
       <%= render partial: 'post_comments/post_comment_form', locals: { book: @book, post_comment: @post_comment } %>
      </div>
    </div>
  </div>
</div>