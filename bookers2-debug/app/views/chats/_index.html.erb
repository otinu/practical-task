 <% chats.each do |chat| %> <!-- eachメソッドによって、tbodyタグは@chatsの中身の数だけ生成される-->
                <% if chat.user_id == current_user.id %>
                <tbody>
                  <tr>
                    <th>
                      <p style="text-align: left;"><%= chat.message %></p>
                      
                      <!-- 作りかけ。迷走して終了-->
                       <%= link_to 'Destroy', chats_path, {method: :delete, class: "btn btn-sm btn-danger", remote: true} %>
                      
                      
                    </th>
                    <th></th>
                  </tr>
                </tbody>
                <% else %>
                <tbody>
                  <tr>
                    <th></th>
                    <th>
                      <p style="text-align: right;"><%= chat.message %></p>
                    </th>
                  </tr>
                </tbody>
                <% end %>
                <!-- この行に、create.js.erbで生成されるpタグが挿しこまれる -->
              <% end %>