<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h2 id="room"><%= @user.name %> さんとのチャット</h2>

            <table class="message table">
              <thead>
                <tr>
                  <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
                  <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
                </tr>
              </thead>
              
            <div id="chat_destroy_<%= @chat.id %>">　<!-- 作りかけ -->
             <%= render 'index', chats: @chats%>
             </div>
             
            </table>

            <%= form_with model: @chat, remote: true do |f| %>
              <%= f.text_field :message %>
              <%= f.hidden_field :room_id %>
            <% end %>
        </div>
    </div>
</div>