<% provide(:title, @title) %>

  <div class = "follow_form">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |f| %>
         <li>
           <%= attachment_image_tag f, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "40x40" %>
           <%= f.name %>
           <%= link_to "Show", user_path(f.id) %>
         </li>
        <% end %>
      </ul>
    <% else %>
     <% if @title == "Follows" %>
      <h4>現在、フォロー中のユーザーはおりません</h4>
     <% else %>
      <h4>現在、フォローされておりません</h4>
     <% end %>
    <% end %>
  </div>
</div>




